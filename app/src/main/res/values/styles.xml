<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_h1">
        <item name="android:textColor">@color/text_emphasis</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_h2">
        <item name="android:textColor">@color/text_emphasis</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_h3">
        <item name="android:textColor">@color/text_emphasis</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_form_label">
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="text_form_error">
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:textColor">@color/danger_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="button_secondary">
        <item name="android:background">@drawable/btn_secondary</item>
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:textColor">@color/text_emphasis</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:paddingHorizontal">10dp</item>
    </style>

    <style name="button_primary">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:textColor">@color/text_emphasis</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:paddingHorizontal">10dp</item>
    </style>
</resources>