<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    HEADER STYLES-->
    <style name="header">
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!--    TEXT STYLES-->
    <style name="text">
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text.p">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineSpacingExtra">-8sp</item>
    </style>

    <style name="text.h1">
        <item name="android:textColor">@color/text_emphasis</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text.h2">
        <item name="android:textColor">@color/text_emphasis</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text.h3">
        <item name="android:textColor">@color/text_emphasis</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text.h4">
        <item name="android:textColor">@color/text_emphasis</item>
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingExtra">-8sp</item>
    </style>

    <style name="text.subtitle">
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text.form_label">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="text.form_input">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text.form_error">
        <item name="android:textColor">@color/danger_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.picker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/text_secondary</item>
        <item name="android:textColorSecondary">@color/text_tertiary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text.splash">
        <item name="android:textColor">@color/text_splash</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">fantasy</item>
    </style>

    <!--    BUTTON STYLES-->
    <style name="button">
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:textColor">@color/text_emphasis</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:paddingHorizontal">10dp</item>
    </style>

    <style name="button.primary">
        <item name="android:background">@drawable/btn_primary</item>
    </style>

    <style name="button.secondary">
        <item name="android:background">@drawable/btn_secondary</item>
    </style>

    <style name="button.success">
        <item name="android:background">@drawable/btn_success</item>
    </style>

    <style name="button.danger">
        <item name="android:background">@drawable/btn_danger</item>
    </style>


    <!--    IMAGE STYLES-->
    <style name="rounded_image">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>

    <style name="rounded_big_image">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

    <style name="header_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/dash_title</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">5dp</item>
    </style>

    <style name="AppTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/secondary_bg</item>
        <item name="colorPrimaryDark">@color/body_bg</item>
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="AppTheme.SlidrActivityTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="state_line">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:background">@color/emphasis_color</item>
    </style>

</resources>